{
  "name": "@EaseShare/business",
  "version": "0.0.1",
  "packageManager": "yarn@3.1.0",
  "scripts": {
    "clear:generated": "rm -rf generated",
    "build": "esbuild src/**/*.ts --outdir=generated/src --format=cjs --sourcemap",
    "build:esm": "esbuild src/**/*.ts --outdir=generated/esm/src --format=esm --sourcemap",
    "build:types": "tsc --project tsconfig.src.json --emitDeclarationOnly --outDir generated/src",
    "build:esm:types": "tsc --project tsconfig.src.json --emitDeclarationOnly --outDir generated/esm/src",
    "build:production": "yarn clear:generated && yarn build && yarn build:types && yarn build:esm && yarn build:esm:types",
    "build:test": "esbuild tests/**/*.ts --outdir=generated/tests --format=cjs --sourcemap",
    "copy:assets:test": "cp -r tests/assets generated/tests/assets",
    "pretest": "yarn clear:generated && yarn build:test && yarn copy:assets:test && yarn build",
    "mocha": "mocha",
    "mocha:with-spec": "mocha --spec generated/tests/**/*.spec.js",
    "test:with-spec": "yarn pretest && yarn mocha:with-spec",
    "test:without-spec": "yarn pretest && yarn mocha"
  },
  "files": [
    "generated/src",
    "generated/esm/src",
    "src"
  ],
  "main": "generated/src/index.js",
  "module": "generated/esm/src/index.js",
  "devDependencies": {
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@tsconfig/recommended": "^1.0.1",
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "chai": "^4.3.4",
    "esbuild": "^0.14.0",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "hardhat": "^2.7.0",
    "karma": "^6.3.9",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-mocha": "^2.0.1",
    "mocha": "^9.1.3",
    "prettier": "^2.5.0",
    "sinon": "^12.0.1",
    "source-map-support": "^0.5.21",
    "typescript": "^4.5.3"
  },
  "dependencies": {
    "axios": "^0.24.0",
    "base58-js": "^1.0.0",
    "browser-or-node": "^2.0.0",
    "crypto-js": "^4.1.1",
    "ethers": "^5.5.2",
    "eventemitter3": "^4.0.7",
    "form-data": "^4.0.0",
    "ipfs-core": "^0.12.2",
    "ipfs-only-hash": "^4.0.0",
    "js-base64": "^3.7.2",
    "jszip": "^3.7.1",
    "randomstring": "^1.2.1",
    "web3": "^1.6.1"
  }
}
